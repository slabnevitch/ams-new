extends _misc/main
block title
	| Вакансии
	- var authorized = false;
	- var headerMenu = true;
block content
	.wrapper-simple
		ul.breadcrumbs
			li.breadcrumbs__item
				a(href="").breadcrumbs__link Главная
			li.breadcrumbs__item
				span.breadcrumbs__target Вакансии
	
	.page.page-vacancies
		.wide-container.bg_gray
			.wrapper-simple
				- var vacs = [{name: 'Инженер-наставник по BIM-проектированию', rate: '150 000 ₽ на руки', reqs: ['Требуемый опыт работы: от 1 года', 'Полная занятость, удаленная работа'], descr: 'Работа в крупной и стабильной компании - структуре лучшей Особой экономической зоны Европы. Конкурентный уровень з/п и оплата труда согласно ТК РФ. Пятидневная рабочая неделя с 8:00 до 17:00.'}, {name: 'Ведущий инженер-конструктор навесных вентилируемых фасадов', rate: '110 000 ₽ на руки', reqs: ['Требуемый опыт работы: от 2 лет', 'Полная занятость'], descr: 'Проектирование (НВФ) и светопрозрачных конструкций. Участие в переговорах по технической составляющей с заказчиком, согласование проекта, консультирование. Выдача технических заданий конструкторам, контроль выполнения ими работ.'}, {name: '3D-моделлер/визуализатор', rate: 'от 80 000 ₽ на руки', reqs: ['Требуемый опыт работы: не важен', 'Удаленная работа'], descr: 'Создание 3D-моделей, 3D-анимации и VR-проектов; визуализация экстерьера и интерьера архитектурных объектов.'}];
				
				each vac, ind in vacs
					.vacancy
						.vacancy__header
							h2.vacancy__title= vac.name
							.vacancy__logo
								img(src="img/vacancy-page/"+(ind+1)+".svg" alt="alt") 
						.vacancy__rate= vac.rate
						
						.vacancy__body
							ul.vacancy__requirements
								each req in vac.reqs
									li.vacancy__requirement= req

							.vacancy__content
								p.vacancy__description= vac.descr
								a(href="#").vacancy__more.btn.btn-accented Подробнее

				a(href="#").btn.btn-sm.btn-bordered Показать ещё

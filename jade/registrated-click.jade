extends _misc/main
block title
	| Регистрация c платного курса
	- var authorized = false;
	- var headerMenu = false;

block content
	.page.page-enter.page-reg-from-free
		.wrapper-simple
			.page-enter__content
				.page-enter__pict
					img(src=img + "from-free-visual.svg" alt="alt")
				h1 Создайте личный кабинет или войдите под своими данными 

				.your-choice
					.your-choice__heading Вы выбрали:
					.your-choice__wrap
						.your-choice__header
							.tag.tag-mini.tag-autocad-bg Autocad
							.tag.tag-mini.tag-base-bg Бесплатно
						.your-choice__body
							.your-choice__title Базовый курс по 3ds Max + Corona Render
							.your-choice__img._fit
								img._fit-img(src=img + 'you-selection.jpg' alt="alt")
							.your-choice__bottom
								.your-choice__label 13 уроков
								.your-choice__label Без подготовки

				//- .email-message
				//- 	.email-message__title Проверьте почту
				//- 	.email-message__text Чтобы подтвердить регистрацию на курс, перейдите по ссылке в письме. Мы отправили его на #[a(href="mailto:mail-example@mail.com").link mail-example@mail.com]
				//- 	.email-message__text Если вы не получили письмо, напишите нам на #[a(href="mailto:merkulov@autocad-specialist.ru").link merkulov@autocad-specialist.ru]

				p.page-enter__text.page-enter__error Вы уже зарегистрированы. Ведите логин и пароль.


				form.form
					label.form__label
						input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Электронная почта или имя")
					label.form__label
						input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Пароль")
					//- label.form__label
					//- 	input(autocomplete="off" type="text" name="" class="form__input" placeholder="Повторите пароль")
					//- label.form__label
					//- 	input#phone(autocomplete="off" type="text" name="" class="form__input")
					.form__bottom
						button(type="button").btn.btn-accented Войти
						a(href="#popup-password").popup-with-form Забыли пароль?

					p.page-enter__text Нажимая кнопку, принимаю #[a(href="#") условия политики] и #[a(href="#") пользовательского соглашения]

					.page-enter__bottom
						span Нет аккаунта?
						a(href="/").link Зарегистрироваться

	
	.popup.popup-password#popup-password.mfp-hide
		.popup__header
			.popup__logo
				img(src=img + "logo.svg" alt="alt")
		.popup__body
			.popup__title Восстановить пароль
		
			p.popup__text Укажите ваш email при регистрации.
			p.popup__text На него будет выслано письмо с инструкцией по восстановлению пароля.

			form.form
				label.form__label
					input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Ваш email")

				.form__bottom
					button(type="button").btn.btn-accented Восстановить пароль

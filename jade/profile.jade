extends _misc/main
block title
	| Профиль
	- var authorized = true;
	- var headerMenu = true;
block content
	.wrapper-simple
		ul.breadcrumbs
			li.breadcrumbs__item
				a(href="").breadcrumbs__link Главная
			li.breadcrumbs__item
				span.breadcrumbs__target Мой профиль

	.page.page-profile
		.wide-container
			.wrapper-simple
				.wrapper-flex
					.page-profile__user
						.page-profile__avatar
							.page-profile__img
								img(src="img/profile-user.jpg" alt="alt")

							a(href="/").link.page-profile__link Изменить аватар
					
						h1 Константин Константинопольский

					.page-profile__errors
						.page-profile__error Вы уже зарегистрированы. Ведите логин и пароль.

					.page-profile__block
						.wrapper-flex
							.page-profile__text
								.page-profile__title О себе
								p.page-profile__prgf Вносите реальные данные.
								p.page-profile__prgf Они нужны для получения доступа к платформу, получения сертификата и кураторам.

							.page-profile__form
								form.form
									label.form__label
										input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Имя")

									label.form__label
										input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Логин")

									label.form__label
										input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Email")

									label.form__label
										input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Телефон")

									.btn.btn-mini.btn-accented Сохранить

									p Нажимая кнопку, #[a(href="#") принимаю условия политики] и #[a(href="#") пользовательского оглашения]

					.page-profile__block
						.wrapper-flex
							.page-profile__text
								.page-profile__title Прявязка  социальных сетей
								p.page-profile__prgf Для быстрого входа на сайт и дополнительной связи.
								p.page-profile__prgf В Телеграм-боте вы будете получать все уведомления и события с нашей платформы.
							
							.page-profile__form
								.page-profile__socials.socials-page-profile
									.page-profile__socials-row
										.page-profile__icon
											+icon('VK')
										.btn.btn-mini.btn-accented Привязать

									.page-profile__socials-row
										.page-profile__icon
											+icon('Facebook')
										.btn.btn-mini.btn-accented Привязать

									.page-profile__socials-row
										.page-profile__icon
											+icon('Telegram')
										.btn.btn-mini.btn-accented Подключить бот
										

					.page-profile__block
						.wrapper-flex
							.page-profile__text
								.page-profile__title Изменить пароль

							.page-profile__form
								form.form
									label.form__label
										input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Пароль")

									label.form__label
										input(autocomplete="off" type="text" name="name" class="form__input" placeholder="Повторите пароль")

									.btn.btn-mini.btn-accented Сохранить

					.page-profile__block
						.wrapper-flex
							.page-profile__text
								.page-profile__title Какие уведомления  
									br
									| вы хотите получать

							.page-profile__form
								form.form
									- var checks = ['Новости платформы', 'Ответ куратора', 'Акции'];
									each item, i in checks

										if i==0
											label.form__label
												input(type="checkbox" checked class="form__checkbox" name="name" + (i+1))
												span.form__false-checkbox
													+icon('check')
												span.form__checkbox-label= item
										else
											label.form__label
												input(type="checkbox" class="form__checkbox" name="name" + (i+1))
												span.form__false-checkbox
													+icon('check')
												span.form__checkbox-label= item


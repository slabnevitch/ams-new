extends _misc/main
block title
	| Уроки и статьи
	- var authorized = true;
	- var headerMenu = true;
block content
	.wrapper-simple
		ul.breadcrumbs
			li.breadcrumbs__item
				a(href="").breadcrumbs__link Главная
			li.breadcrumbs__item
				span.breadcrumbs__target Уроки и статьи

	.page.page-lessons
		.wide-container
			.wrapper-simple
		
				.filter-tags
					.tag.tag-revit-empty Revit
					.tag.tag-autocad-bg Autocad
					.tag.tag-revit-empty Archicad
					.tag.tag-3ds-empty 3Ds Max
					.tag.tag-corona-empty Corona
					.tag.tag-lumion-empty Lumion
					.tag.tag-interior-empty Интерьеры
					.tag.tag-landscape-empty Ладшафт
				
				.wrapper-flex.lessons-cards
					- var titles = ['Настройки отображения поверхности в Civil 3D', 'AutoCAD. Создаем план этажа/квартиры. Самый быстрый способ', '10 главных принципов AutoCAD, без которых ваша работа не эффективна. Часть №1', 'Настройки отображения поверхности в Civil 3D', '3ds Max + Corona Render', 'AutoCAD. Создаем план этажа/квартиры. Самый быстрый способ', 'Настройки отображения поверхности в Civil 3D', 'AutoCAD. Создаем план этажа/квартиры. Самый быстрый способ', 'AutoCAD. Создаем план этажа/квартиры. Самый быстрый способ', 'Настройки отображения поверхности в Civil 3D', 'AutoCAD. Создаем план этажа/квартиры. Самый быстрый способ', 'AutoCAD. Создаем план этажа/квартиры. Самый быстрый способ', 'Настройки отображения поверхности в Civil 3D', '3ds Max + Corona Render', 'AutoCAD. Создаем план этажа/квартиры. Самый быстрый способ'];
					each item, i in titles
						a(href="/").lesson-card
							.lesson-card__img._fit
								img._fit-img(src=img + "/lessons-page/" + (i+1) + ".jpg" alt="alt")
							.lesson-card__body
								h2= item
								.lesson-card__text На уроках Алексей объясняет все доходчиво и понятно, а обратная связь помогает решит дополнительные вопросы, которые возникли в ходе обучения. Спасибо большое за полученные знания. Всем рекомендую.
							.lesson-card__footer
								.lesson-card__views
									+icon('eye')
									| 1245
								.lesson-card__date 1.10.2021 г.

				button.btn.btn-sm.btn-bordered Показать ещё



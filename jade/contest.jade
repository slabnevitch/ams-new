extends _misc/main
block title
	| Конкурс - раздел
	- var authorized = true;
	- var headerMenu = true;
block content
	.wrapper-simple
		ul.breadcrumbs
			li.breadcrumbs__item
				a(href="").breadcrumbs__link Главная
			li.breadcrumbs__item
				span.breadcrumbs__target Конкурсы

	.page.page-contest
		.contest-banner
			.contest-banner__wrapper
				.wrapper-simple
					.wrapper-flex
						.contest-banner__content
							.tag.tag-misc-empty Конкурс
							.contest-banner__title Конкурс на лучший проект 2022
							.contest-banner__text Ежегодный конкурс от учебного центра Алексея Меркулова.
							.contest-banner__found Призовой фонд 100 000 ₽
							.contest-banner__logos
								.contest-banner__logos-row
									- for (var i=0; i < 2; i++)
										.contest-banner__logo
											img(src=img + "contest-page/logos/"+(i+1)+".svg" alt="logo")

								.contest-banner__logos-row
									- for (var i=2; i < 4; i++)
										.contest-banner__logo
											img(src=img + "contest-page/logos/"+(i+1)+".svg" alt="logo")

							.btn.btn-wht.btn-sm Участвовать

						.contest-banner__img
							._fit
								img._fit-img(src=img + "/contest-page/banner.jpg" alt="aly")

		.page-contest__container.wide-container
			.wrapper-simple
				h1 Прошлые конкурсы
				
				.filter-tags
					.tag.tag-autocad-bg Autocad
					.tag.tag-archicad-empty Archicad
					.tag.tag-3ds-empty 3Ds Max
					.tag.tag-revit-empty Lumion
					.tag.tag-revit-empty Revit
				
				.wrapper-flex.contest-cards
					- var items = [{title: 'AUTOCAD', icon: "autocad", format: "png"}, {title: 'REVIT', icon: "revit", format: "png"}, {title: 'ARCHICAD', icon: "revit", format: "png"}, {title: 'AUTOCAD', icon: "3ds", format: "png"},{title: 'REVIT', icon: "lumion", format: "svg"},{title: 'ARCHICAD', icon: "archicad", format: "svg"}];
						- for (var n=0; n < 2; n++)
							each item, i in items
								.contest-card			
									.contest-card__header
										.contest-card__date 2021 год
										.tag.tag-mini.tag-autocad-empty Autocad			
									.contest-card__img._fit
										img._fit-img(src=img + "contest-page/"+(i+1)+".jpg" alt="a;t")
									.footer-tile-item
										.program-icon
											img(src=img + "program-icons/" + item.icon + "." + item.format alt="alt")
										.footer-tile-item__text
											.footer-tile-item__title AUTOCAD. Конкурс на лучший проект
									.contest-card__count 1245 работ


